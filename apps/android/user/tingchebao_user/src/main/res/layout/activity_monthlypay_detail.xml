<?xml version="1.0" encoding="utf-8"?>
<com.tq.zld.widget.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ssv_monthlypay_detail_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:visibility="invisible" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/iv_monthlypay_detail_photo"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#000000"
            android:src="@drawable/img_monthlypay_default" />

        <ImageView
            android:id="@+id/iv_monthlypay_detail_type"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/iv_monthlypay_detail_photo"
            android:layout_alignTop="@+id/iv_monthlypay_detail_photo"
            android:background="@drawable/img_monthlypay_full" />

        <TextView
            android:id="@+id/tv_monthlypay_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_monthlypay_detail_photo"
            android:layout_alignLeft="@+id/iv_monthlypay_detail_photo"
            android:layout_alignRight="@+id/iv_monthlypay_detail_photo"
            android:background="#A0000000"
            android:gravity="center_vertical"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingTop="3dp"
            android:text="百脑汇固定车位月卡团购，会员尊享"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_monthlypay_detail_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/iv_monthlypay_detail_photo"
            android:layout_alignTop="@+id/iv_monthlypay_detail_photo"
            android:layout_margin="3dp"
            android:background="#A0000000"
            android:gravity="center"
            android:padding="3dp"
            android:text="@string/monthlypay_childview_number"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/ll_monthlypay_detail_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_monthlypay_detail_photo"
            android:orientation="vertical" >

            <include layout="@layout/item_monthlypay_detail_buy" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv1_monthlypay_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_monthlypay_detail_buy"
            android:background="#ffffff"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="停车场信息"
            android:textColor="#B0B0B0" />

        <TextView
            android:id="@+id/tv_monthlypay_detail_parkname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1_monthlypay_detail"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="北京旗舰店百脑汇停车场"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/iv_monthlypay_detail_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_monthlypay_detail_address"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_monthlypay_detail_parkname"
            android:background="#ffffff"
            android:paddingLeft="5dp"
            android:paddingRight="15dp"
            android:src="@drawable/ic_phone_green" />

        <TextView
            android:id="@+id/tv_monthlypay_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_monthlypay_detail_parkname"
            android:layout_marginRight="1dp"
            android:layout_toLeftOf="@+id/iv_monthlypay_detail_phone"
            android:background="#ffffff"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="北京市朝阳区朝阳门外大街99-4号"
            android:textColor="#B0B0B0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_monthlypay_detail_distance"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv_monthlypay_detail_address"
            android:layout_marginRight="1dp"
            android:background="#ffffff"
            android:gravity="bottom"
            android:paddingLeft="5dp"
            android:text=""
            android:textColor="#B0B0B0"
            android:textSize="10sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_monthlypay_detail_praise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_monthlypay_detail_distance"
            android:layout_marginTop="1dp"
            android:background="#FFFFFF"
            android:gravity="left|center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="25dp"
            android:paddingTop="5dp"
            android:text="23"
            android:textColor="#B0B0B0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_monthlypay_detail_disparage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_monthlypay_detail_praise"
            android:layout_alignTop="@+id/tv_monthlypay_detail_praise"
            android:layout_toLeftOf="@+id/tv_monthlypay_detail_commentnum"
            android:layout_toRightOf="@+id/tv_monthlypay_detail_praise"
            android:background="#FFFFFF"
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:paddingTop="5dp"
            android:text="23"
            android:textColor="#B0B0B0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_monthlypay_detail_commentnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_monthlypay_detail_praise"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/tv_monthlypay_detail_praise"
            android:background="#FFFFFF"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/ic_arrow_gray"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingRight="8dp"
            android:paddingTop="5dp"
            android:text="231人评价"
            android:textColor="#B0B0B0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv7_monthlypay_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_monthlypay_detail_praise"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="产品信息"
            android:textColor="#B0B0B0" />

        <TextView
            android:id="@+id/tv_monthlypay_detail_resume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv7_monthlypay_detail"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="一年以内"
            android:textColor="@color/bg_darkgray_recharge" />

        <TextView
            android:id="@+id/tv2_monthlypay_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_monthlypay_detail_resume"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="5dp"
            android:background="#ffffff"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="购买须知"
            android:textColor="#B0B0B0" />

        <TextView
            android:id="@+id/tv3_monthlypay_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2_monthlypay_detail"
            android:background="#ffffff"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="有效期："
            android:textColor="@color/text_orange" />

        <TextView
            android:id="@+id/tv_monthlypay_detail_limitday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv3_monthlypay_detail"
            android:background="#ffffff"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="一年以内"
            android:textColor="@color/bg_darkgray_recharge" />

        <TextView
            android:id="@+id/tv4_monthlypay_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_monthlypay_detail_limitday"
            android:background="#ffffff"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="使用时间："
            android:textColor="@color/text_orange" />

        <TextView
            android:id="@+id/tv_monthlypay_detail_limittime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv4_monthlypay_detail"
            android:background="#ffffff"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="全天（00:00-24:00）"
            android:textColor="@color/bg_darkgray_recharge" />

        <TextView
            android:id="@+id/tv5_monthlypay_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_monthlypay_detail_limittime"
            android:background="#ffffff"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="车位是否固定："
            android:textColor="@color/text_orange" />

        <TextView
            android:id="@+id/tv_monthlypay_detail_reserved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv5_monthlypay_detail"
            android:background="#ffffff"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="@string/monthlypay_detail_unreserved"
            android:textColor="@color/bg_darkgray_recharge" />

        <TextView
            android:id="@+id/tv6_monthlypay_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_monthlypay_detail_reserved"
            android:background="#ffffff"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="使用规则："
            android:textColor="@color/text_orange" />

        <WebView
            android:id="@+id/wv_monthlypay_detail_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv6_monthlypay_detail" />

        <include
            android:id="@+id/ll_monthlypay_detail_buy_top"
            layout="@layout/item_monthlypay_detail_buy" />
    </RelativeLayout>

</com.tq.zld.widget.StickyScrollView>