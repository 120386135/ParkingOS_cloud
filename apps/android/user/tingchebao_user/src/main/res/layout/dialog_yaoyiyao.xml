<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_dialog_yaoyiyao_cancle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="top|right"
            android:layout_marginRight="8dp"
            android:drawableRight="@drawable/dailog_yao_cancle"
            android:paddingRight="5dp"
            android:text="" />

        <TextView
            android:id="@+id/tv_dialog_yaoyiyao_anim"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/dialog_yaoyiyao"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ProgressBar
                android:id="@+id/pb_dialog_yaoyiyao_progressbar"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/tv_dialog_yaoyiyao_text_warn"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="摇一摇生成订单..."
                android:textColor="@color/text_gray"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>