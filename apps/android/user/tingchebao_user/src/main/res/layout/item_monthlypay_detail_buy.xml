<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEE"
    android:paddingBottom="5dp" >

    <TextView
        android:id="@+id/tv_monthlypay_detail_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_monthlypay_detail_buy"
        android:layout_alignTop="@+id/tv_monthlypay_detail_buy"
        android:gravity="bottom"
        android:paddingLeft="8dp"
        android:text="00元" />

    <TextView
        android:id="@+id/tv_monthlypay_detail_price0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_monthlypay_detail_price"
        android:layout_toRightOf="@+id/tv_monthlypay_detail_price"
        android:padding="3dp"
        android:text="@string/monthlypay_childview_price0"
        android:textColor="@color/bg_gray" />

    <TextView
        android:id="@+id/tv_monthlypay_detail_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:background="@color/red"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="立即抢购"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

</RelativeLayout>