<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_monthlypay_childview_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#000000"
        android:src="@drawable/pic_park_ex" />

    <ImageView
        android:id="@+id/iv_monthlypay_childview_type"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/iv_monthlypay_childview_photo"
        android:layout_alignTop="@+id/iv_monthlypay_childview_photo"
        android:background="@drawable/img_monthlypay_full" />

    <TextView
        android:id="@+id/tv_monthlypay_childview_limittime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_monthlypay_childview_photo"
        android:layout_alignLeft="@+id/iv_monthlypay_childview_photo"
        android:layout_alignRight="@+id/iv_monthlypay_childview_photo"
        android:background="#A0000000"
        android:gravity="center"
        android:padding="2dp"
        android:text="00:00-24:00"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_monthlypay_childview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_monthlypay_childview_photo"
        android:padding="5dp"
        android:text="百脑汇月卡团购，会员尊享"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_monthlypay_childview_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_monthlypay_childview_photo"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="3dp"
        android:background="@color/red"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="抢购"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_monthlypay_childview_buy"
        android:layout_alignRight="@+id/tv_monthlypay_childview_buy"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_arrow_gray"
        android:padding="10dp"
        android:text="详情"
        android:textColor="@color/text_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_monthlypay_childview_buy"
        android:layout_alignLeft="@+id/tv_monthlypay_childview_name"
        android:orientation="vertical"
        android:paddingLeft="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_monthlypay_childview_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00元" />

            <TextView
                android:id="@+id/tv_monthlypay_childview_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/monthlypay_childview_number"
                android:textColor="@color/bg_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_monthlypay_childview_price0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monthlypay_childview_price0"
            android:textColor="@color/bg_gray" />
    </LinearLayout>

</RelativeLayout>