<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:padding="10dp">

    <ImageView
        android:id="@id/iv_friend_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/ic_new_friend" />

    <TextView
        android:id="@+id/tv_friend_unread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/iv_friend_head"
        android:layout_alignTop="@id/iv_friend_head"
        android:background="@drawable/bg_chat_unread_count"
        android:gravity="center"
        android:text="2"
        android:textColor="#ffffff"
        android:textSize="12sp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_friend_head"
        android:text="新的朋友"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>