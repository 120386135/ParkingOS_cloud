<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/iv_searchlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:contentDescription="@null"
        android:src="@drawable/ic_action_search" />

    <TextView
        android:id="@+id/tv_searchlist_key"
        style="?android:attr/dropDownItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_searchlist"
        android:layout_toRightOf="@+id/iv_searchlist"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="中关村创业大厦"
        android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_searchlist_district"
        style="?android:attr/dropDownItemStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_searchlist_key"
        android:layout_alignStart="@+id/tv_searchlist_key"
        android:layout_below="@+id/tv_searchlist_key"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="北京市海淀区"
        android:textAppearance="?android:attr/textAppearanceLargePopupMenu"
        android:textColor="@color/text_gray"
        android:textSize="14sp" />

</RelativeLayout>