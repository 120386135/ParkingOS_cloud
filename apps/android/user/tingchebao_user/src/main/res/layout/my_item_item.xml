<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_gray_stroke"
    android:paddingBottom="5dp" >

    <LinearLayout
        android:id="@+id/ll_myitem_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#5F74D9"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_myitem_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:padding="5dp"
            android:singleLine="true"
            android:text="中关村创业大厦停车场-夜间包月卡"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_myitem_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:text="￥0000.00"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_item_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_myitem_item_name"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="剩余天数 :" />

    <TextView
        android:id="@+id/tv_item_item_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_item_item_tv1"
        android:layout_alignRight="@id/tv_item_item_tv1"
        android:layout_below="@id/tv_item_item_tv1"
        android:gravity="center"
        android:text="有效时段 :" />

    <TextView
        android:id="@+id/tv_item_item_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_item_item_tv1"
        android:layout_alignRight="@id/tv_item_item_tv1"
        android:layout_below="@id/tv_item_item_tv2"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="有效期限 :" />

    <TextView
        android:id="@+id/tv_myitem_item_limitday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_item_item_tv1"
        android:layout_below="@id/ll_myitem_item_name"
        android:layout_toRightOf="@id/tv_item_item_tv1"
        android:gravity="center"
        android:text="20"
        android:textColor="#31A767"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_myitem_item_limittime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_item_item_tv2"
        android:layout_alignTop="@id/tv_item_item_tv2"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_item_item_tv2"
        android:gravity="center"
        android:text="7:00pm-7:00am" />

    <TextView
        android:id="@+id/tv_myitem_item_limitdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_item_item_tv3"
        android:layout_alignLeft="@+id/tv_myitem_item_limittime"
        android:layout_alignTop="@id/tv_item_item_tv3"
        android:gravity="center"
        android:text="2014.04.01-2014.06-30" />

</RelativeLayout>