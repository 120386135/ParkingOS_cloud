<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="你想给谁送券,请选择"
        android:textColor="@color/input_dialog_black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_bt_red_white"
        android:gravity="center|right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_send_ticket_already_reward"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/bt_red_left"
            android:gravity="center"
            android:text="打赏过的"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_send_ticket_already_parking"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="停过车的"
            android:textColor="#E37578"
            android:textSize="12dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/lv_send_ticket_users"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="10"
        android:background="@color/white" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_send_ticket_selected"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="3dp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="请选择要发给的车主"
            android:textColor="@color/input_dialog_black"
            android:textSize="14dp" />

        <CheckBox
            android:id="@+id/cb_send_ticket_select_all"
            style="@style/CustomCheckboxTheme_red_big"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:layout_weight="11"
            android:gravity="center" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_send_ticket_send"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_bt_red_white1"
        android:gravity="center"
        android:text="发送"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_send_ticket_residue_score"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center|right"
        android:paddingRight="10dp"
        android:text="发送后积分剩余："
        android:textColor="@color/input_dialog_black"
        android:textSize="12sp" />

</LinearLayout>