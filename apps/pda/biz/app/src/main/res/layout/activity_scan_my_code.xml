<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="限领一次，领取后页面失效"
        android:textColor="@color/app_bg"
        android:textSize="14dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_scan_code_code"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:background="@drawable/red_ticket" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_scan_refersh_qrcode"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:background="@drawable/shape_bt_red_white"
        android:text="刷新二维码"
        android:textColor="#E36358" />

    <RelativeLayout
        android:layout_width="255dp"
        android:layout_height="170dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ticket" >

        <TextView
            android:id="@+id/tv_scan_code_money"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="40dp"
            android:gravity="bottom"
            android:text=""
            android:textColor="#FFEC9F"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/tv_scan_code_money"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="55dp"
            android:background="@drawable/rmb"
            android:textColor="#FFEC9F"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_scan_code_parkname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_scan_code_money"
            android:gravity="center_horizontal"
            android:text="金隅嘉华大厦停车场专用券"
            android:textColor="#FFEC9F"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_scan_code_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:text="消耗收费员积分"
            android:textColor="#FFEC9F"
            android:textSize="14dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_scan_change_money"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_bt_red_white"
        android:text="更改金额"
        android:textColor="#E36358" />

</LinearLayout>