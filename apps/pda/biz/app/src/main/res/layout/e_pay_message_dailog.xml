<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center|left"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/app_icon_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="收到一笔车主付款"
            android:textColor="#40BAE5"
            android:textSize="16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#40BAE5" >
    </View>

    <TextView
        android:id="@+id/tv_epay_message_carnumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center|left"
        android:paddingLeft="20dp"
        android:text="车主："
        android:textColor="#000000"
        android:textSize="26dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_epay_message_money"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center|left"
        android:paddingLeft="20dp"
        android:text="付款："
        android:textColor="#000000"
        android:textSize="26dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_epay_message_warn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center|left"
        android:paddingLeft="20dp"
        android:text="收到停车宝奖励2元"
        android:textColor="@color/tv_leaveItem_state_green"
        android:textSize="16dp"
        android:visibility="invisible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EAEAEA" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_epay_message_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/tv_leaveItem_state_green"
            android:text="确认放行"
            android:textColor="#ffffff"
            android:textSize="19dp" />

        <View
            android:id="@+id/view_nfc_view"
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:background="#EAEAEA" />

        <Button
            android:id="@+id/bt_epay_message_check"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="查看账户"
            android:textColor="#000000"
            android:textSize="19dp" />
    </LinearLayout>

</LinearLayout>