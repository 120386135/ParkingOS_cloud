<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="生成订单"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="100"
                android:gravity="center|right"
                android:text="开启车牌录入"
                android:textSize="16sp"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/cb_open_car_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:id="@+id/view_nfc_new_bar"
            android:layout_width="310dp"
            android:layout_height="0.5dp"
            android:background="#c9c9c9" >
        </View>

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="90dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/neworder" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_nfc_new_time"
                    android:layout_width="120dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="3dp"
                    android:gravity="center|top"
                    android:text="时间"
                    android:textColor="#000000"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="日期"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="310dp"
            android:layout_height="0.5dp"
            android:background="#c9c9c9" >
        </View>

        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt_ok"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="确定"
                android:textColor="@color/tv_leaveItem_state_green"
                android:textSize="18dp" />

            <View
                android:id="@+id/view_bt_cancle"
                android:layout_width="0.5dp"
                android:layout_height="30dp"
                android:background="#c9c9c9" />

            <Button
                android:id="@+id/bt_cancle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:text="取消"
                android:textColor="@color/tv_leaveItem_state_green"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>