<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/tv_register_photo_warn"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="请上传照片证明你是一个真实收费员！"
            android:textColor="#646464"
            android:textSize="17sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="8dp" >

            <ImageView
                android:id="@+id/iv_register_photo1"
                android:layout_width="95dp"
                android:layout_height="105dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/photo_work" />

            <ImageView
                android:id="@+id/iv_register_photo2"
                android:layout_width="95dp"
                android:layout_height="105dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/photo_hide" />

            <ImageView
                android:id="@+id/iv_register_photo3"
                android:layout_width="95dp"
                android:layout_height="105dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/photo_hide" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/iv_register_photo4"
                android:layout_width="95dp"
                android:layout_height="105dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/photo_hide" />

            <ImageView
                android:id="@+id/iv_register_photo5"
                android:layout_width="95dp"
                android:layout_height="105dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/photo_hide" />

            <ImageView
                android:id="@+id/iv_register_photo6"
                android:layout_width="95dp"
                android:layout_height="105dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/photo_hide" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="100"
            android:gravity="center|left"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="照片需至少包含以下信息：\n1, 您的姓名；\n2, 停车场详细地址；\n3, 停车场名称，车位总数；\n4, 合法的收费员身份证明;\n注：可以将信息写在纸上拍照。"
                    android:textColor="#D60400"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_register_look_other"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/recommend_vip"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="看看别人是\n怎么上传的"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <Button
                android:id="@+id/bt_register_photo_finish"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_login_button"
                android:text="上传并完成注册"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_wait_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ee303030"
        android:visibility="invisible" >

        <TextView
            android:id="@+id/tv_wait1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_wait"
            android:layout_marginBottom="55dp"
            android:gravity="center"
            android:text="等待审核... ..."
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_wait"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="需要1-3天"
            android:textColor="#c9c9c9"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_wait"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerInParent="true"
            android:background="#ee303030" />

        <Button
            android:id="@+id/bt_register_photo_callme"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/tallme"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_register_photo_add"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"
            android:layout_marginRight="15dp"
            android:gravity="center|right"
            android:text="点我补充资料"
            android:textColor="@color/tv_leaveItem_state_green"
            android:textSize="17sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>