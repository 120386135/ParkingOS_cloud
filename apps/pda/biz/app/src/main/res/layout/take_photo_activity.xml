<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:gravity="center"
        android:orientation="horizontal" >

       <ImageView
            android:id="@+id/imv_take_photo_photo_null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/max_camera"
            android:scaleType="centerInside" />

        <ImageView
            android:id="@+id/imv_take_photo_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_take_photo_make"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/tv_leaveItem_state_green"
            android:gravity="center"
            android:text="拍摄车场照片"
            android:textColor="#ffffff" />

        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#c9c9c9" />

        <Button
            android:id="@+id/bt_take_photo_ok"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/tv_leaveItem_state_green"
            android:text="完成注册"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>