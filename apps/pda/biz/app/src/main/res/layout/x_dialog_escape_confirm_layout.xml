<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:background="#36A56A"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="车辆逃单确认"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_fast_finish_order_duration"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="100"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/ll_fastout_finish_order_isuser"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tv_fastout_finish_order_isuser"
                android:layout_width="69dp"
                android:layout_height="49dp"
                android:background="@drawable/finish_order_vip"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/view_fastout_finish_bar"
        android:layout_width="310dp"
        android:layout_height="0.5dp"
        android:background="#c9c9c9" >
    </View>
    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="310dp"
        android:layout_height="60dp"
        android:text="确定要置为逃单？"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
       android:paddingLeft="20dp"/>
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#36A56A"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#36A56A"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <View
            android:id="@+id/view_fastout_view"
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:background="#c9c9c9" />



        <Button
            android:id="@+id/dialog_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#36A56A"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>