<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_carnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京C00000"
            android:textColor="#666666"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2016-4-11 9:23:32"
            android:textColor="@color/gray"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥255"
            android:layout_alignParentLeft="true"
            android:textColor="#666666"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView

            android:id="@+id/item_oweimg"
            android:layout_marginRight="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/app_icon" />

        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/item_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_money"
            android:layout_marginTop="10dp"
            android:text="1天2小时34分钟56秒"
            android:textColor="#36A56A"
            android:textSize="15sp" />
    </RelativeLayout>
</LinearLayout>