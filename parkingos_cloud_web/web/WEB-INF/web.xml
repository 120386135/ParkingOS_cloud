<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name />
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:/applicationContext.xml</param-value>
  </context-param>
  <filter>
    <filter-name>Set Character Encoding</filter-name>
    <filter-class>com.zld.SetCharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>GBK</param-value>
    </init-param>
  </filter>
  <!-- Example filter mapping to apply the "Set Character Encoding" filter
		to *all* requests processed by this web application -->
  <filter-mapping>
    <filter-name>Set Character Encoding</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>Set Character Encoding</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <!-- 权限验证 -->
  <filter>
		<filter-name>url</filter-name>
		<filter-class>com.zld.struts.admin.AuthFilter</filter-class>
		<init-param>
			<param-name>failurl</param-name>
			<param-value>/noauth.html</param-value>
		</init-param>
	</filter>
  	
  	<filter-mapping>
		<filter-name>url</filter-name>
		<url-pattern>*.do</url-pattern>
  	</filter-mapping>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>action</servlet-name>
    <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>/WEB-INF/struts-config.xml</param-value>
    </init-param>
    <init-param>
      <param-name>debug</param-name>
      <param-value>3</param-value>
    </init-param>
    <init-param>
      <param-name>detail</param-name>
      <param-value>3</param-value>
    </init-param>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>action</servlet-name>
    <url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>proxoolServletConfigurator</servlet-name>
    <servlet-class>org.logicalcobwebs.proxool.configuration.ServletConfigurator</servlet-class>
    <init-param>
      <param-name>xmlFile</param-name>
      <param-value>WEB-INF/classes/proxool.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>Admin</servlet-name>
    <servlet-class>org.logicalcobwebs.proxool.admin.servlet.AdminServlet</servlet-class>
  </servlet>
  <!-- <servlet>
		<servlet-name>taskServlet</servlet-name>
		<servlet-class>com.zld.schedule.TaskServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet> -->
  <servlet-mapping>
    <servlet-name>Admin</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>JerseyServlet</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
  
    <servlet-name>JerseyServlet</servlet-name>
    <url-pattern>/parkpics/*</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>/WEB-INF/pages/zld/login.jsp</welcome-file>
  </welcome-file-list>
  <error-page>  
    <error-code>500</error-code>  
  	<location>/WEB-INF/pages/zld/500.jsp</location>  
  </error-page>  
  <error-page>  
    <error-code>404</error-code>  
  	<location>/WEB-INF/pages/zld/404.jsp</location>  
  </error-page>  
</web-app>

